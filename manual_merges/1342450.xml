  <datafield tag="246" ind1=" " ind2=" ">
    <subfield code="9">arXiv</subfield>
    <subfield code="a">Event-by-event mean p_T fluctuations in pp and Pb-Pb collisions at the LHC</subfield>
  </datafield>
  <datafield tag="269" ind1=" " ind2=" ">
