  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Bipartite opinion forming: Towards consensus over coopetition networks</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-04</subfield>
    <subfield code="t">published</subfield>
