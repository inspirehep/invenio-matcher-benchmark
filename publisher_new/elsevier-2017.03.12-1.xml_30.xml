  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">GPU-accelerated Tersoff potentials for massively parallel Molecular Dynamics simulations</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2017-03</subfield>
    <subfield code="t">published</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
