  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Orbit control of a stratospheric satellite with parameter uncertainties</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-12-01</subfield>
