  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Convergence analysis of two-node CMFD method for two-group neutron diffusion eigenvalue problem</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
    <subfield code="t">published</subfield>
