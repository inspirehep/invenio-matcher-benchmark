  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Complexity multiscale asynchrony measure and behavior for interacting financial dynamics</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2016-08-26</subfield>
