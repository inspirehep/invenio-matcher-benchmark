  <datafield tag="245" ind1=" " ind2=" ">
    <subfield code="a">Explicit integration with GPU acceleration for large kinetic networks</subfield>
  </datafield>
  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="c">2015-12-01</subfield>
